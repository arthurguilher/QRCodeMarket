<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arthur.qrcodemarket.CarrinhoActivity">

    <LinearLayout
        android:id="@+id/form_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_gravity="left"
            android:weightSum="1"
            android:layout_height="65dp">

            <TextView
                android:id="@+id/textTitulo"
                android:layout_width="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight=".89"
                android:text="Meu carrinho"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/botao_novo_produto"
                android:layout_width="0dp"
                android:layout_gravity="right"
                android:layout_margin="@dimen/fab_margin"
                android:layout_weight=".20"
                android:onClick="scanQR"
                android:src="@android:drawable/ic_input_add"
                android:layout_height="44dp"/>
        </TableRow>


        <ListView
            android:id="@+id/listView"
            android:layout_width="fill_parent"
            android:layout_height="350dp"
            android:layout_below="@+id/listLabel"
            android:cacheColorHint="#FFFFFF"
            android:layout_marginTop="0dp"/>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:weightSum="1"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textoTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: R$ 0,00"
                android:layout_weight=".45"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/botaoProximo"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="PrÃ³ximo"
                android:layout_width="10dp"
                android:layout_weight=".55"/>

        </TableRow>

    </LinearLayout>
</LinearLayout>
