<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arthur.qrcodemarket.CadastroEndereco">


    <LinearLayout
        android:id="@+id/form_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Endereço"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:weightSum="1">

            <AutoCompleteTextView
                android:id="@+id/campoLogradouro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight=".78"
                android:hint="Logradouro"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

            <AutoCompleteTextView
                android:id="@+id/campoNumeroResidencia"
                android:layout_width="0dp"
                android:layout_marginTop="30dp"
                android:layout_weight=".22"
                android:hint="Número"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:weightSum="1">


            <AutoCompleteTextView
                android:id="@+id/campoBairro"
                android:layout_width="0dp"
                android:layout_weight=".40"
                android:hint="Bairro"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

            <AutoCompleteTextView
                android:id="@+id/campoCidade"
                android:layout_width="0dp"
                android:layout_weight=".38"
                android:hint="Cidade"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

            <Spinner
                android:id="@+id/spinnerUF"
                android:layout_width="0dp"
                android:layout_gravity="right"
                android:layout_weight=".22"
                android:spinnerMode="dialog" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:weightSum="1">

            <AutoCompleteTextView
                android:id="@+id/campoCEP"
                android:layout_width="0dp"
                android:layout_weight=".30"
                android:hint="CEP"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true" />

            <AutoCompleteTextView
                android:id="@+id/campoComplemento"
                android:layout_width="0dp"
                android:layout_weight=".70"
                android:hint="Complemento"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/botaoCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Cancelar" />

            <Button
                android:id="@+id/botaoPular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Pular" />

            <Button
                android:id="@+id/botaoProximo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Próximo" />
        </TableRow>
    </LinearLayout>
</LinearLayout>