<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context=".CarrinhoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/carrinho_foto_produto"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:id="@+id/form_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <TextView
                    android:id="@+id/carrinho_nome_produto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".93"
                    android:text="Descrição:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/carrinho_botao_deletar"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight=".10"
                    android:background="#99CC"
                    android:drawableLeft="@android:drawable/ic_menu_delete"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <TextView
                    android:id="@+id/carrinho_subdescricao_produto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".70"
                    android:text="Subdescrição:"
                    android:textAppearance="?android:attr/textAppearanceSmall" />


                <Button
                    android:id="@+id/carrinho_botao_aumentar"
                    android:layout_width="5dp"
                    android:layout_height="35dp"
                    android:layout_weight=".15"
                    android:background="#99CC"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/carrinho_quantidade_produto"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".20"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/carrinho_botao_diminuir"
                    android:layout_width="5dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight=".15"
                    android:background="#99CC"
                    android:focusableInTouchMode="false"
                    android:text="–"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/carrinho_valor_produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Valor (unidade):"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>