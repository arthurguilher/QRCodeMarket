<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context=".CarrinhoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/carrinho_foto_produto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.20"
            android:background="@mipmap/ic_photo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_weight="0.60"
            android:orientation="vertical">

            <TextView
                android:id="@+id/carrinho_nome_produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".93"
                android:text="Descrição:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/carrinho_subdescricao_produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight=".70"
                android:text="Subdescrição:"
                android:textAppearance="?android:attr/textAppearanceSmall" />


            <TextView
                android:id="@+id/carrinho_valor_produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="0.30"
                android:text="Valor:"
                android:textAppearance="?android:attr/textAppearanceSmall" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/carrinho_botao_aumentar"
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:layout_weight=".10"
                    android:background="@mipmap/ic_plus" />

                <TextView
                    android:id="@+id/carrinho_quantidade_produto"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight=".15"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/carrinho_botao_diminuir"
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:layout_weight=".10"
                    android:background="@mipmap/ic_minus" />

                <ImageView
                    android:id="@+id/carrinho_botao_deletar"
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:layout_weight=".10"
                    android:background="@mipmap/ic_delete" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>