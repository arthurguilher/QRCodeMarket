<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arthur.qrcodemarket.CadastroBasicoActivity">


    <LinearLayout
        android:id="@+id/form_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Informações Básicas"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <AutoCompleteTextView
            android:id="@+id/campoNome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Nome completo"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:singleLine="true" />


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:weightSum="1">

            <AutoCompleteTextView
                android:id="@+id/campoEmail"
                android:layout_width="0dp"
                android:layout_weight=".60"
                android:hint="E-mail (se possuir)"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true" />

            <AutoCompleteTextView
                android:id="@+id/campoCPF"
                android:layout_width="0dp"
                android:layout_weight=".40"
                android:hint="CPF"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:weightSum="1">

            <AutoCompleteTextView
                android:id="@+id/campoTelefone"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:hint="Celular"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true" />

            <AutoCompleteTextView
                android:id="@+id/campoNascimento"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:hint="Nascimento"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true" />

            <Spinner
                android:id="@+id/spinnerSexo"
                android:layout_width="0dp"
                android:layout_gravity="right"
                android:layout_weight=".36"
                android:spinnerMode="dialog" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:weightSum="1">

            <AutoCompleteTextView
                android:id="@+id/campoSenha"
                android:layout_height="wrap_content"
                android:hint="@string/small_hint_senha"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_weight=".50"/>

            <AutoCompleteTextView
                android:id="@+id/campoSenha2"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:hint="@string/small_hint_senha2"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/botaoProximo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Próximo" />


            <Button
                android:id="@+id/botaoCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Cancelar" />


        </TableRow>
    </LinearLayout>
</LinearLayout>
